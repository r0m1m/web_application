										label(for='swm_segregate')
										span Percent of HH - segregate SW 
									.material-switch
										input#swm_col_van(type='radio' name='indicators' value='swm_col_van')
										label(for='swm_col_van')
										span Percent of HH - door to door collection
									.material-switch
										input#swm_van_ulb(type='radio' name='indicators' value='swm_van_ulb')
