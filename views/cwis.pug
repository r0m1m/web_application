										input#swm_landfill_extent(type='radio' name='indicators' value='swm_landfill_extent')
										label(for='swm_landfill_extent')
										span Extent of scientific disposal of waste at landfill site
									.material-switch
										input#swm_tp_capacity(type='radio' name='indicators' value='swm_tp_capacity')
										label(for='swm_tp_capacity')
										span Treatment capacity
								span Reuse
								.card-body
									.material-switch
										input#swm_recovery_extent(type='radio' name='indicators' value='swm_recovery_extent')
										label(for='swm_recovery_extent')
