							h6 CWIS
							.card-body
								span Access and Equity
								.card-body
									.material-switch
										input#imp_toilet(type='radio' name='indicators' value='imp_toilet')
										label(for='imp_toilet')
										span Percentage of population with access to improved individual toilets
									.material-switch
										input#will_imp_toilet(type='radio' name='indicators' value='will_imp_toilet')
										label(for='will_imp_toilet')
										span Willingness to improve toilet
									.material-switch
										input#will_imp_cont(type='radio' name='indicators' value='will_imp_cont')
										label(for='will_imp_cont')
										span Willingness to improve containment
								span Environmental Safety
								.card-body
									.material-switch
										input#cont_accessible(type='radio' name='indicators' value='cont_accessible')
										label(for='cont_accessible')
										span Percent of containments accessible
									.material-switch
										input#cont_emptied(type='radio' name='indicators' value='cont_emptied')
										label(for='cont_emptied')
										span Percent of containments emptied at least once
									.material-switch
										input#cont_emptied_2y(type='radio' name='indicators' value='cont_emptied_2y')
										label(for='cont_emptied_2y')
										span Percent of containments emptied within last 2 years
								span Worker Safety
								.card-body
									.material-switch
										input#cont_emptied_mp(type='radio' name='indicators' value='cont_emptied_mp')
										label(for='cont_emptied_mp')
										span Percent of containments emptied in mechanical process
									.material-switch
										input#fs_to_tp(type='radio' name='indicators' value='fs_to_tp')
										label(for='fs_to_tp')
										span Percent of sludge transported to treatment plant
								span Sustainability
								.card-body
									.material-switch
										input#will_imp_service(type='radio' name='indicators' value='will_imp_service')
										label(for='will_imp_service')
										span Willingness to improve service
									.material-switch
										input#FSTP_capacity(type='radio' name='indicators' value='FSTP_capacity')
										label(for='FSTP_capacity')
